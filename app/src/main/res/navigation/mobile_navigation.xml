<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="mirzae.com.medicine.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_subject"
            app:destination="@id/nav_subject" />
    </fragment>

    <fragment
        android:id="@+id/nav_subject"
        android:name="mirzae.com.medicine.ui.subject.SubjectFragment"
        android:label="@string/list_subject"
        tools:layout="@layout/fragment_subject"/>

    <fragment
        android:id="@+id/nav_account"
        android:name="mirzae.com.medicine.ui.account.AccountFragment"
        android:label="@string/menu_login"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/nav_contactus"
        android:name="mirzae.com.medicine.ui.contactus.ContactUsFragment"
        android:label="@string/menu_contact_us"
        tools:layout="@layout/fragment_contactus" />


    <fragment
        android:id="@+id/nav_aboutus"
        android:name="mirzae.com.medicine.ui.about.AboutUsFragment"
        android:label="@string/menu_about_us"
        tools:layout="@layout/fragment_about" />
</navigation>